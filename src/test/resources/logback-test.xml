<configuration>
    <appender name = "STDOUT" class = "ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} [%thread] %-5level %logger{40}</pattern>
        </encoder>
    </appender>
    <root level = "info">
        <appender-ref ref = "STDOUT" />
    </root>
</configuration>